<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <winsdkfb-DeviceType Condition="'$(TargetPlatformIdentifier)' == 'UAP'">win10</winsdkfb-DeviceType>
    <winsdkfb-DeviceType Condition="'$(TargetPlatformIdentifier)' == 'UWP'">win10</winsdkfb-DeviceType>
  </PropertyGroup>

  <Target Name="winsdkfb-DeviceType-Check" BeforeTargets="InjectReference">
      <Error Condition="'$(winsdkfb-DeviceType)' == ''" Text="Unable to determine if Windows or Windows Phone app" />
  </Target>

  <Target Name="InjectReference" BeforeTargets="ResolveAssemblyReferences">
    <ItemGroup>
      <Reference Include="winsdkfb">
        <HintPath>$(winsdkfb-LibDir)$(winsdkfb-DeviceType)\winsdkfb.winmd</HintPath>
        <Implementation>winsdkfb.dll</Implementation>
      </Reference>
    </ItemGroup>
  </Target>

  <ItemGroup>
    <SDKReference Condition="'$(winsdkfb-DeviceType)' == 'win10'" Include="Microsoft.VCLibs, Version=14.0">
      <Name>Microsoft Visual C++ 2015 Runtime Package for Windows Universal</Name>
    </SDKReference>
  </ItemGroup>

</Project>
